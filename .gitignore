# ignore everything in the root except the "wp-content", "wp-includes" and "database" directory.
!wp-content/
!database/

# ignore everything in the "wp-content" directory, except:
# "mu-plugins", "plugins", "themes" directory
wp-content/*
!wp-content/mu-plugins/
!wp-content/plugins/
!wp-content/themes/

# ignore everything in the "wp-includes" directory, except:
# "version.php" for referencing current used version
wp-includes/*
!wp-includes/version.php
wp-config.php
.htaccess
# ignore these plugins
wp-content/plugins/hello.php

# ignore specific themes
wp-content/themes/twenty*/

# ignore node dependency directories
node_modules/

# ignore log files and databases
*.log
*.sql
*.sqlite

# Log files
*.log

# Package files
*.jar

# Generated by MacOS
.DS_Store

# Generated by Windows
Thumbs.db

# Applications
*.app
*.exe
*.war

# Large media files
*.mp4
*.tiff
*.avi
*.flv
*.mov
*.wmv
